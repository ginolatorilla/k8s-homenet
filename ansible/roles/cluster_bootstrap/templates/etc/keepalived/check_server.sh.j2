#!/bin/sh

errorExit() {
    echo "*** $*" 1>&2
    exit 1
}

curl --silent --max-time 2 --insecure https://localhost:{{ port }}/ -o /dev/null || errorExit "Error GET https://localhost:{{ port }}/"
if ip addr | grep -q {{ server }}; then
    curl --silent --max-time 2 --insecure https://{{ server }}:{{ port }}/ -o /dev/null || errorExit "Error GET https://{{ server }}:{{ port }}/"
fi